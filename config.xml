<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smfproject.SMF" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SMF</name>
    <description>
        SMF es una aplicación que hace de intermediario entre una posible víctima de maltrato y la policía.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Eva y Jaime
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />

    <preference name="Orientation" value="portrait" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
